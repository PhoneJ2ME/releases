    <!--
        Additions for Appmanager OMA OTA
     -->
    <device>
        <identifier>              Zaurus/Appmanager
        </identifier>
        <adapter-name>            oma
        </adapter-name>
        <capability>
            <capability-name>     SoftwarePlatform.JavaPlatform
            </capability-name>
            <capability-value>    CDC-HI/FP/PP
            </capability-value>
        </capability>
        <capability>
            <capability-name>,    HardwarePlatform.ScreenSize
            </capability-name>
            <capability-value>    240x320
            </capability-value>
        </capability>
        <capability>
            <capability-name>     HardwarePlatform.BitsPerPixel
            </capability-name>
            <capability-value>    16
            </capability-value>
        </capability>
    </device>

     <!--
         Device mapping added for Appmanager OMA OTA
       -->
     <device-mapping>
            <identifier>
                Zaurus/Appmanager
            </identifier>

            <match-any>
                <request-mapping>
                    <header-name> user-agent </header-name>
                    <header-value>
                        CDC/FP 1.1 Appmanager
                    </header-value>
                </request-mapping>
            </match-any>
     </device-mapping>


</devices>
      
